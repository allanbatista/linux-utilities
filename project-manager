#!/usr/bin/env python3
"""
Project Manager CLI

Professional command-line interface for managing projects with plans and tasks.

Usage:
    pm init                        # Initialize workspace
    pm plan list                   # List all plans
    pm plan create                 # Create new plan (interactive)
    pm plan show <name>            # Show plan details
    pm task list <plan>            # List tasks in a plan
    pm task create <plan>          # Create new task
    pm status                      # Show overall status
    pm validate <plan>             # Validate plan

Run 'pm --help' for full documentation.
"""

import sys
from pm.cli.commands import cli


def main():
    """Entry point for PM CLI."""
    try:
        cli(obj={})
    except KeyboardInterrupt:
        print("\n\nOperation cancelled by user")
        sys.exit(130)
    except Exception as e:
        print(f"Fatal error: {e}", file=sys.stderr)
        sys.exit(1)


if __name__ == '__main__':
    main()
