#!/usr/bin/env bash
set -euo pipefail

SCRIPT_PATH="$(readlink -f -- "${BASH_SOURCE[0]}")"
SCRIPT_DIR="$(dirname -- "$SCRIPT_PATH")"

show_help() {
    echo "ab - Allan Batista's CLI utilities"
    echo ""
    echo "Uso: ab <categoria|comando> [argumentos...]"
    echo ""
    echo "Categorias:"
    echo "  git               Git utilities powered by LLM"
    echo "  util              General utilities"
    echo ""
    echo "Comandos:"
    echo "  prompt            Envia contexto para LLM (OpenRouter)"
    echo ""
    echo "Exemplos:"
    echo "  ab git auto-commit -a -y"
    echo "  ab git pr-description -c"
    echo "  ab util passgenerator 16"
    echo "  ab prompt -p 'oi'"
    echo ""
    echo "Use 'ab <categoria> help' para ver comandos da categoria"
    echo "Use 'ab <categoria> <comando> --help' para mais detalhes"
}

# Se nenhum argumento, mostra help
if [ $# -eq 0 ]; then
    show_help
    exit 0
fi

COMMAND="$1"
shift

case "$COMMAND" in
    help|-h|--help)
        show_help
        ;;
    git|util)
        exec "$SCRIPT_DIR/ab-$COMMAND" "$@"
        ;;
    prompt)
        exec "$SCRIPT_DIR/$COMMAND" "$@"
        ;;
    *)
        echo "Erro: comando desconhecido '$COMMAND'"
        echo "Use 'ab help' para ver comandos disponiveis"
        exit 1
        ;;
esac
